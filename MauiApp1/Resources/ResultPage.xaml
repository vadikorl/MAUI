<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ResultPage"
             Title="Wellness Result">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label x:Name="ScoreLabel" Text="Score: --" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Label x:Name="StatusLabel" Text="Status: --" FontSize="22" HorizontalOptions="Center"/>

        <Button Text="See Recommendations"
                Clicked="OnSeeRecommendationsClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"/>
    </VerticalStackLayout>
</ContentPage>